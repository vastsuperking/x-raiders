import engine.imp.render.*;

float elapsedTime = 0;

void shot() {
	render = entity.components().get(CRender.NAME);
	render.setVisible(true);
	elapsedTime = 0;
}

void update(time) {
	flightTime = script_data.getData("flight_time");
	elapsedTime += time;
	if (elapsedTime >= flightTime) {
		render = entity.components().get(CRender.NAME);
		render.setVisible(false);
		elapsedTime = 0;
	}
}